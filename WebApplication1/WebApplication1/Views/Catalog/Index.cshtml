@using WebApplication1.Models.DBModels

@model WebApplication1.Models.DBModels.Post

@{
    ViewBag.Title = "Каталог";
}


<div class="container-fluid h-100">
    <div class="row h-100">

        <form>
            @Html.DropDownList("category", new SelectList(ViewBag.Catigories), "Категория")
            @Html.DropDownList("color", new SelectList(ViewBag.Colors), "Цвет")

            <div class="form-group">
                <button onclick="loadProduct()" class="btn pull-right">Поиск</button>
            </div>
        </form>


        <main class="col" id="results">
            <div class="col-lg-10 products">
                <div class="row" id="product">
                    @foreach (var p in ViewBag.Posts)
                    {
                        <div class="col-sm-4">
                            <div class="product">
                                <div class="product-img" style="display: block;  width: 210px; height: 210px; overflow:hidden;">
                                    <a href="#"><img src="@p.Img" alt=""></a>

                                </div>
                                <p class="product-title">
                                    @p.Name
                                </p>
                                <p class="product-desc">@p.Price</p>
                                @*@Html.ActionLink("Купить", "Index", "Seller")*@
                            </div>
                        </div>

                    }
                </div>
            </div>
        </main>

    </div>
</div>

<script src="../Scripts/LoadingFilter.js" type="text/javascript"></script>

